<div class="inner-container">
  <div class="profile-photo"></div>
  <div class="inner-container">

    <h3>Positions</h3>
    <% @player.positions.each do |position| %>
      <div class="inner-container"><%= position.name %></div>
    <% end %>
  </div>

  <div class="inner-container">
    <h3>Sports</h3>
    <% @player.sports.each do |sport| %>
      <div class="inner-container"><%= sport.name %></div>
    <% end %>
  </div>

  <div class="inner-container">
    <h3>Teams</h3>
    <% @player.teams.each do |team| %>
      <div class="inner-container"><%= team.team_name %></div>
    <% end %>
  </div>

  <div class="inner-container">
    <h3>info</h3>
    <p><%= @player.info %></p>
  </div>

  <% if logged_in? %>
  <% if current_player.id == @player.id %>

  <div class="buttons">
     <%= button_to "Edit Profile", edit_player_path(current_player), method: :get, class: "button" %>
    <%= button_to "Delete Profile", root_path, :confirm => 'Are you sure?',method: :delete, class: "button" %>
    <%= button_to "Send Email", email_player_path(@player), class: "button" %>
    <%= button_to "Add Media Resource", new_media_path, method: "get", class: "button" %>
  </div>
  <% end %>
  <% end %>

  <% if @player.has_media? %>
  <%= button_to "See Our Work", root_path, method: :get, class: "button link_media", data: {id: @player.id} %>
  <div class="media">
    <% @player.media.each do |resource| %>
    <% if resource.media_type == "youtube" %>
    <div> <p> <%= resource.content %>:</p>
      <iframe width="420", height="315", src="<%= youtube_embed_link resource %>" , frameborder="0", allowfullscreen></iframe>
    </div>
    <% end %>
    <% if resource.media_type == "soundcloud" %>
    <div> <p><%= resource.content %>:</p>
      <p><%= link_to 'track', resource.link %></p>
    </div>
    <% end %>
    <% if resource.media_type == "image" %>
    <div> <p> <%= resource.content %>:</p>
      <img src="<%= resource.link %>">
    </div>
    <% end %>
    <% end %>
  </div>
  <% end %>

</div>