<div id="search-position">
  <h4>Choose a Position:</h4>
  <div>
   <%= form_tag do%>
   <% @positions.uniq.each do |position_obj| %>
   <%= radio_button_tag(:instrument, "#{position_obj.name}") %>
   <%= label_tag("#{position_obj.name}") %>
   <%= hidden_field_tag :group, "Athletes" %>
   <% end %>
 </div>

 <div>
  <h4>Athletes</h4>
  <ol>
    <% @athelets.each do |athlete| %>
    <li><%= athlete.username %></li>
    <% end %>
  </ol>
</div>

</div>