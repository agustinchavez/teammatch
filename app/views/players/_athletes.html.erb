<div id="athlete-search-sport">
  <div class="jumbotron text-center">
    <h1>I want my athlete to play this/these sports:</h1>  <div>
      <%= form_tag("players/search", method: "post") do %>
        <% @sports.each do |sport_obj| %>
        <%= check_box_tag("[Sport][#{sport_obj.id}]", "#{sport_obj.name}") %>
        <%= label_tag("#{sport_obj.name}"), nil, :class => "h2" %>
      <% end %>
        <%= hidden_field_tag :group, "Athletes" %>
      <br>
      <%= submit_tag("Search", :class => "btn btn-primary btn-lg") %>
      <% end %>
  </div>
</div>

<div class="alert alert-success" role="alert">
  <h2 class="text-center"><%= @athletes.count  %> <%= @athltes.count > 1 ? "results:" : "result:" %></h2>
</div>

  <div class="row">
   <% @athletes.each do |athlete| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSYeMmqgj1FO8TbWrQoyo33lLB23fY0xpU6i-yWB4qdjf1mtYTrteryRQ" alt="..." class="pull-left">
      <div class="caption">
        <h3 class="text-center"><%= athlete.username %></h3>
        <% if !athlete.positions.empty? %>
          <p class="text-center"><%= athlete.positions.first.name %></p>
        <% end %>
        <% if !athlete.sports.empty? %>
          <p class="text-center"><%= athlete.sports.first.name %></p>
        <% end %>
        <p class="text-center"><%= athlete.city %>, <%= athlete.state %></p>
        <p class="text-center">Distance from me <%= athlete.distance_from(Player.find(current_player.id), :units=>:miles).round(2) %></p>
        <p class="text-right"><a href="/players/<%= athlete.id %>" class="btn btn-primary" role="button">Profile</a></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

</div>