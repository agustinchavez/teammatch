<div id="team-search-sport">
  <% if !@teams.empty? %>
  <h4>What Sport Would You Like The Team To Play?</h4>

  <div>
    <%= form_tag("teams/search", method: "post") do %>
    <% @sports.uniq.each do |sport_obj| %>
    <%= check_box_tag("[Sport][#{sport_obj.id}]", "#{sport_obj.name}") %>
    <%= label_tag("#{sport_obj.name}") %>
  <% end %>
  <%= hidden_field_tag :group, "Teams" %>
  <%= submit_tag("Search") %>
  <% end %>
  </div>

  <div>
      <h4>Teams</h4>
       <ol>
      <% @teams.each do |team| %>
        <li><%= team.team_name %></li>
      <% end %>
      </ol>
  </div>

  <div>
    <%= link_to "Back", root_path %>
  </div>

  <% else %>
  <h4>Sorry, we can't find what you're looking for.</h4>
  <%= link_to "Home", root_path %>
  <% end %>

</div>