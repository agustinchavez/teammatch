<div id="team-search-sport">
  <% if !@teams.empty? %>
  <div class="jumbotron text-center">
  <h1>What Sport Would You Like The Team To Play?</h1>

  <div>
    <%= form_tag("teams/search", method: "post") do %>
    <% @sports.uniq.each do |sport_obj| %>
    <%= check_box_tag("[Sport][#{sport_obj.id}]", "#{sport_obj.name}") %>
    <%= label_tag("#{sport_obj.name}", nil, :class => "h2") %>
  <% end %>
  <%= hidden_field_tag :group, "Teams" %>
  <%= submit_tag("Search", :class => "btn btn-primary btn-lg") %>
  <br>
  <% end %>
  </div>

  <div class="row">
<% @teams.each do |team| %>
  <div class="col-sm-6 col-md-4">
    <div class="drop-shadow">
    <div class="thumbnail">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSYeMmqgj1FO8TbWrQoyo33lLB23fY0xpU6i-yWB4qdjf1mtYTrteryRQ" alt="...">
      <div class="caption">
        <h3 class="text-center"><%= team.team_name %></h3>
        <p class="text-center"><%= tea.sports.first.name %></p>
        <p class="text-right"><a href="/teams/<%= team.id %>" class="btn btn-primary" role="button">Profile</a> </p>
      </div>
    </div>
  </div>
  </div>
  <% end %>
</div>

  <% else %>
  <div class="alert alert-danger" role="alert">
  <h2 class="text-center">Sorry, there are no results that match that query.</h2>
  </div>
  <%= link_to "Home", root_path, :class => "btn btn-primary btn-lg" %>
  <% end %>

</div>