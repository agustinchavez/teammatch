<div id="team-search-sport">
  <h4>What Sport Are You Looking For?</h4>

  <div>
    <%= form_tag("teams/search", method: "get") do %>
    <% @sports.uniq.each do |sport_obj| %>
    <%= radio_button_tag(:genre, "#{sport_obj.name}") %>
    <%= label_tag("#{sport_obj.name}") %>
  <% end %>
  <%= submit_tag("Search") %>
  <% end %>
  </div>


  <div>
      <h4>Teams</h4>
       <ol>
      <% @teams.each do |team| %>
        <li><%= team.team_name %></li>
      <% end %>
      </ol>
  </div>

</div>