<div class="container">
<h2>Update Profile</h2>

<h2>Update your information below:</h2>
<%= form_for @team, url: team_path(@team), method: :put do |f| %>

  <p><%= f.label :team_name %></p>
  <p><%= f.text_field :team_name %></p>

  <p><%= f.label :sports %></p>
  <p><%= f.text_field :sports %></p>

  <p><%= f.label :media %></p>
  <p><%= f.text_field :media %></p>

  <%= f.submit "Update", class: "button" %>
<% end %>
</div>

<p><%= link_to "Delete my Question", team_path(@team), method: :delete %></p></div>