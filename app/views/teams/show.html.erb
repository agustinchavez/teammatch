<div id="inner-container">
  <div class="profile-picture"></div>

  <div class="inner-container">
    <h3>Team name:</h3>
      <div class="inner-container"><%= @team.team_name %></div>

    <h3>Positions</h3>
    <div class="inner-container">
      <% @team.players.each do |player| %>
        <%= player.username %>:
        <% player.positions.each do |position| %>
         <div class="tag"><%= position.name %></div>
      <% end %><br>
      <% end %>
    </div>
  </div>

  <div class="inner-container">
    <h3>Sports</h3>
    <% @team.sports.each do |sport| %>
      <div class="tag"><%= sport.name %></div>
    <% end %>
  </div>

<div class="inner-container">
    <h3>Teammates</h3>
    <% @team.players.each do |player| %>
      <div class="tag"><%= player.username %></div>
    <% end %>
  </div>

  <div class="inner-container">
    <h3>Contact:</h3>
    <%= @team.admin.username %>:<br>
    <%= @team.admin.email %><br>
    <%= @team.admin.phone %>
  </div>

  <div class="inner-container">
    <h3>Info</h3>
    <p><%= @team.info %></p>
  </div>
</div>

<% if logged_in? %>
<% if true || current_player.id == @team.admin.id %>
<div class="buttons">
  <%= button_to "Edit Profile", edit_team_path(@team), method: :get, class: "button" %>
  <%= button_to "Delete Profile", team_path(@team),  method: :delete, class: "button" %>
  <%= form_tag new_media_path, method: "get" do %>
    <%= hidden_field_tag :team_id, @team.id %>
    <%= submit_tag("Add Media", class: "button") %>
  <% end %>
</div>
<% end %>
<% end %>
<% if @team.has_media? %>
   <%= button_to "See Our Work", root_path, method: :get, class: "button link_media", data: {id: @team.id} %>
<div class="media">
  <% @team.media.each do |resource| %>
  <% if resource.media_type == "youtube" %>
  <div> <p> <%= resource.content %>:</p>
    <iframe width="420", height="315", src="<%= youtube_embed_link resource %>" , frameborder="0", allowfullscreen></iframe>
  </div>
  <div>
    <%= form_tag media_path(resource), method: :delete do %>
    <%= hidden_field_tag :team_id, @team.id %>
    <%= submit_tag("Delete This", class: "button") %>
    <% end %>
  </div>
  <% end %>
  <% if resource.media_type == "soundcloud" %>
  <div> <p><%= resource.content %>:</p>
    <p><%= link_to 'track', resource.link %></p>
  </div>
  <div>
    <%= form_tag media_path(resource), method: :delete do %>
    <%= hidden_field_tag :team_id, @team.id %>
    <%= submit_tag("Delete This", class: "button") %>
    <% end %>
  </div>
  <% end %>
  <% if resource.media_type == "image" %>
  <div> <p> <%= resource.content %>:</p>
    <img src="<%= resource.link %>">
  </div>
  <div>
    <%= form_tag media_path(resource), method: :delete do %>
    <%= hidden_field_tag :team_id, @team.id %>
    <%= submit_tag("Delete This", class: "button") %>
    <% end %>
  </div>
  <% end %>
  <% end %>
</div>
<% end %>
</div>