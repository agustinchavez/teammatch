<%= form_tag("/media", method: "post") do %>
        <%= label_tag("Type") %>
        <%= select_tag('media[media_type]', options_for_select(['youtube', 'soundcloud', 'image'])) %>
        <%= text_field_tag 'media[link]', nil, size: 40, placeholder: "Copy and paste link here:" %>
        <%= text_area_tag 'media[content]', nil, size: '40x5', placeholder: "Give your link a description:" %>
        <%= submit_tag("Submit", :class => "btn btn-primary btn-lg") %>
        <% end %>
